@page
@model RegisterModel
@{
    ViewData["Title"] = "Register - ";
}


<div>
    <h1 class="display-4" style="text-align:center">Register</h1>
    <div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />

            <div class="form-group">
                <label>Username</label>
                <input asp-for="Input.Email" class="form-row align-items-center col-auto" />

            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-row align-items-center col-auto" />

            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-row align-items-center col-auto" />

            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>